<Window x:Class="PlanMate.Views.AiChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PlanMate.Converters"
        xmlns:models="clr-namespace:PlanMate.Models"
        Title="AI 챗봇 비서" Height="500" Width="400"
        MinWidth="400" MinHeight="600">
    <Window.Resources>
        <local:RoleToColorConverter x:Key="RoleToColorConverter"/>
        <local:RoleToAlignmentConverter x:Key="RoleToAlignmentConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 🟦 채팅 없을 때 안내 영역 -->
        <StackPanel x:Name="EmptyHintPanel"
                Grid.Row="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Visibility="Visible">
            <Image Source="/Resources/ai_logo.png" Width="120" Height="120" Margin="0,0,0,10"/>
            <TextBlock Text="AI 비서에게 일정 요약이나 조언을 받아보세요!"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="Gray"
                   TextAlignment="Center"/>
        </StackPanel>

        <!-- 💬 채팅 메시지 영역 -->
        <ListBox x:Name="ChatList"
             Grid.Row="0"
             Margin="0,0,0,10"
             ItemsSource="{Binding}"
             Background="Transparent"
             BorderThickness="0"
             ScrollViewer.VerticalScrollBarVisibility="Auto"
             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
             ScrollViewer.CanContentScroll="False"
             VirtualizingStackPanel.IsVirtualizing="False"
             HorizontalContentAlignment="Stretch"
             Visibility="Collapsed">
            <!-- 처음에는 숨김 -->

            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:ChatMessage}">
                    <Border Background="{Binding Role, Converter={StaticResource RoleToColorConverter}}"
                        Padding="10"
                        CornerRadius="10"
                        Margin="5"
                        HorizontalAlignment="Stretch">
                        <TextBlock x:Name="MessageBlock"
                               Text="{Binding Message}"
                               TextWrapping="Wrap"
                               Foreground="White"
                               FontSize="14"
                               Loaded="MessageBlock_Loaded"
                               HorizontalAlignment="Stretch"/>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- 예시 버튼 -->
        <StackPanel x:Name="ExampleButtonPanel"
                    Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,10">
            <Button Content="일정 요약 해줘." Margin="5" Click="ExampleButton_Click"/>
            <Button Content="일정 조언 해줘." Margin="5" Click="ExampleButton_Click"/>
        </StackPanel>

        <!-- 입력 영역 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="UserInputBox"
                     Grid.Column="0"
                     Margin="0,0,10,0"
                     KeyDown="UserInputBox_KeyDown"
                     FontSize="14" />

            <Button x:Name="SendButton"
                    Grid.Column="1"
                    Content="전송"
                    Width="80"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>
