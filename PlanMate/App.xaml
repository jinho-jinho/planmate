<Application x:Class="PlanMate.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PlanMate.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:ImportanceToColorConverter x:Key="ImportanceToColorConverter"/>
        <local:StartEndTimeInlineConverter x:Key="StartEndTimeInlineConverter"/>
        <local:StartEndTimeFormattedConverter x:Key="StartEndTimeFormattedConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:DayToXConverter x:Key="DayToXConverter" ColumnWidth="50"/>
        <local:RoleToColorConverter x:Key="RoleToColorConverter"/>
        <local:RoleToAlignmentConverter x:Key="RoleToAlignmentConverter"/>
    </Application.Resources>
</Application>
