<Window x:Class="PlanMate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PlanMate.Converters"
        xmlns:vm="clr-namespace:PlanMate.ViewModels"
        Title="PlanMate" Height="800" Width="450"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <local:ImportanceToColorConverter x:Key="ImportanceToColorConverter"/>
        <local:DayToXConverter x:Key="DayToXConverter" ColumnWidth="50"/>
    </Window.Resources>

    <Border Background="White" CornerRadius="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.4" ShadowDepth="0"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 상단 바: 창 제어 버튼 포함 -->
            <Grid Grid.Row="0" Background="#EEEEEE">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="PlanMate" FontWeight="Bold" FontSize="14" Margin="10,0" VerticalAlignment="Center" Grid.Column="0"/>

                <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="0,5,5,5">
                    <Button Content="➖" Width="20" Height="20" Margin="1" Click="Minimize_Click"/>
                    <Button Content="❌" Width="20" Height="20" Margin="1" Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <!-- 나머지 기존 컨텐츠 -->
            <Grid Grid.Row="1">
                <!-- 상단: 날짜, 날씨, 프로필 -->
                <Grid Margin="10" Height="50" VerticalAlignment="Top">
                    <TextBlock Text="{Binding CurrentDate}" 
                       VerticalAlignment="Center" 
                       FontWeight="Bold" FontSize="14"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="{Binding WeatherIcon}" Width="30" Height="30" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Temperature}" FontWeight="Bold" FontSize="14"/>
                    </StackPanel>
                    <Button Content="👤" HorizontalAlignment="Right" VerticalAlignment="Center" Width="30" Height="30"/>
                </Grid>

                <!-- 탭 메뉴: 일간 / 월간 / 시간표 -->
                <TabControl x:Name="MainTab" Margin="10,60,10,80">
                    <!-- 일간 -->
                    <TabItem Header="일간">
                        <StackPanel>
                            <!-- 해야 할 일 목록 -->
                            <ListBox x:Name="DailyTaskList">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding Importance, Converter={StaticResource ImportanceToColorConverter}}" Margin="5" Padding="5" CornerRadius="5">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="White"/>
                                                <TextBlock Text="   "/>
                                                <TextBlock Text="{Binding DDay}" FontSize="12" Foreground="White"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </TabItem>

                    <!-- 월간 -->
                    <TabItem Header="월간">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                                <!--<Button Content="◀" Width="30" Click="OnPrevMonthClick"/>
                                <TextBlock Text="{Binding CurrentMonthText}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Margin="10,0" 
                                           VerticalAlignment="Center"/> 
                                <Button Content="▶" Width="30" Click="OnNextMonthClick"/>-->
                            </StackPanel>

                            <!-- 달력 영역 (구현 필요) -->
                            <Border Height="570" Background="Black" Margin="10">
                                <TextBlock Text="여기에 달력 표시" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </TabItem>

                    <!-- 시간표 -->
                    <TabItem Header="시간표">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>    <!-- 요일 헤더 -->
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>  <!-- 시간축 -->
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <!-- 빈 모서리 -->
                            <Border Grid.Row="0" Grid.Column="0" Background="Transparent"/>

                            <!-- 요일 헤더 -->
                            <ScrollViewer x:Name="HeaderScrollViewer"
                                          Grid.Row="0" Grid.Column="1"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Disabled">
                                <UniformGrid Columns="7" Width="350">
                                    <TextBlock Text="일요일" HorizontalAlignment="Left"/>
                                    <TextBlock Text="월요일" HorizontalAlignment="Left"/>
                                    <TextBlock Text="화요일" HorizontalAlignment="Left"/>
                                    <TextBlock Text="수요일" HorizontalAlignment="Left"/>
                                    <TextBlock Text="목요일" HorizontalAlignment="Left"/>
                                    <TextBlock Text="금요일" HorizontalAlignment="Left"/>
                                    <TextBlock Text="토요일" HorizontalAlignment="Left"/>
                                </UniformGrid>
                            </ScrollViewer>

                            <!-- 시간축 레이블 -->
                            <ScrollViewer x:Name="TimeScrollViewer"
                                          Grid.Row="1" Grid.Column="0"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Hidden">
                                <ItemsControl ItemsSource="{Binding TimeLabels}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}"
                                                       Height="60"
                                                       VerticalAlignment="Top"
                                                       FontSize="10"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,0,2,0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <!-- 일정 캔버스 -->
                            <ScrollViewer x:Name="ScheduleScrollViewer"
                                          Grid.Row="1" Grid.Column="1"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto"
                                          ScrollChanged="ScheduleScrollViewer_ScrollChanged">
                                <Grid Width="350" Height="1440">
                                    <Canvas x:Name="ScheduleCanvas" Width="350" Height="1440"/>

                                    <ItemsControl ItemsSource="{Binding ScheduleItems}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <Canvas Width="350" Height="1440"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemContainerStyle>
                                            <Style TargetType="ContentPresenter">
                                                <Setter Property="Canvas.Left" Value="{Binding Day, Converter={StaticResource DayToXConverter}}"/>
                                                <Setter Property="Canvas.Top" Value="{Binding Top}"/>
                                            </Style>
                                        </ItemsControl.ItemContainerStyle>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="LightSkyBlue"
                                                        CornerRadius="3"
                                                        Width="50"
                                                        Height="{Binding Height}">
                                                    <TextBlock Text="{Binding Title}"
                                                               TextWrapping="Wrap"
                                                               FontSize="9"
                                                               Margin="2"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <TabItem Header="메모">
                        <Grid Margin="5">
                            <TextBox x:Name="MemoBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="14" TextChanged="MemoBox_TextChanged"/>
                        </Grid>
                    </TabItem>
                </TabControl>

                <!-- 하단 버튼 영역 -->
                <Grid VerticalAlignment="Bottom" Height="60" Margin="10">
                    <Button Content="✨" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                    <Slider x:Name="OpacitySlider"
                        Width="200"
                        Minimum="0.1"
                        Maximum="1.0"
                        Value="1.0"
                        TickFrequency="0.1"
                        SmallChange="0.1"
                        LargeChange="0.2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        ValueChanged="OpacitySlider_ValueChanged"/>

                    <Button Content="＋" Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Center" Click="AddTaskButton_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
